<main>
  <section class="slider">
    <div class="textBox an1">
      <h2>SIENTE LA MÚSICA</h2>
      <h2>CON NOSOTROS</h2>
    </div>
    <img src="assets/img/banners/wallpaper1.jpg" alt="">
  </section>
  <section class="newAlbums">
    <h1>NOVEDADES</h1>
    <p>Los últimos álbumes más escuchados</p>
    <div class="grid ">
      {{#each products}}
        <div class="container ">
          <div class="albumImgBox">
            <img src="{{this.foto}}" alt="">
          </div>
          <div class="albumInfo ">
            <p>{{this.album}}</p>
            <p>{{this.artista}}</p>
            <a class="hbtn" href="product/{{this.id}}">Comprar</a>
          </div>
        </div>
      {{/each}}
     
      </div>
  </section>
</main>
